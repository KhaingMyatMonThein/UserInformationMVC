@model IEnumerable<UserInformationApp.Models.User>

<h2 class="text-center my-4">User List</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DOB</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Street</th>
                <th>City</th>
                <th>Nationality</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.DOB.ToShortDateString()</td>
                        <td>@user.GenderId</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Street</td>
                        <td>@user.City</td>
                        <td>@user.NationalityId</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>

                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" 
                            onsubmit="return confirm('Are you sure you want to delete this user?');" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="text-center my-4">
    <a asp-action="Create" class="btn btn-success btn-lg">Create New User</a>
</div>
